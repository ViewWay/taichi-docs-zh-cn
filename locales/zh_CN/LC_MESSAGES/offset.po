"e = ti.field(dtype=ti.i32, shape=16, offset=-16)"
"                          # Works!\n"
"f = ti.field(dtype=ti.i32, shape=None, offset=-16)"
"                        # AssertionError\n"
"g = ti.field(dtype=ti.i32, shape=(16, 32), offset=-16)"
"                    # AssertionError"
msgstr ""
"a = ti.Matrix(2, 3, dt=ti.f32, shape=(32,), offset=(-16, ))          # "
"有效!\n"
"b = ti.Vector(3, dt=ti.f32, shape=(16, 32, 64), offset=(7, 3, -4))   # "
